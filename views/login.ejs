<link rel="stylesheet" href="adminstyle.css">
<link rel="stylesheet" href="assets/css/style.css">
<title>Login</title>
</head>
<body>
    <div class="main">
		
		<div class="header">
			<div class="logo">
				<div class="logo_text">
					<h1><a href="/">AdvertisingComputer</a></h1>
					<h2>Computer - the best Product</h2>
				</div>
			</div>
			
			<div class="menubar">
				
				<ul class="menu">
					<li class="selected"><a href="/">Home</a></li>	
					<!-- <li><a href="films.html"></a></li> -->
					<li><a href="/sbout">About</a></li>
					<li><a href="/rating">Maintenance</a></li>
					<li><a href="/contact">Contacts</a></li>
					<li><a href="/registration">Register or Login</a></li>
				</ul>

			</div>

		</div>


        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-2"></div>
                <div class="col-lg-6 col-md-8 login-box">
                    <div class="col-lg-12 login-key">
                        <i class="fa fa-key" aria-hidden="true"></i>
                    </div>
                    <div class="col-lg-12 login-title">
                        Login
                    </div>
                    <div class="col-lg-12 login-form">
                        <div class="col-lg-12 login-form">
                            <form action="/users/login" method="post">
                                <%-include("./partials/messages")-%>
                                <h1>Login Here</h1>
                                <div class="form-row">
                                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                                </div>
                                <div class="form-row">
                                  <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
                                </div>
                                <div class="form-row">
                                  <button type="submit" class="btn btn"
                                    style="padding-left: 60px;padding-right: 60px;border: 1px solid black"> Go </button>
                                  <a href="/users/register" class="btn btn"
                                    style="margin-left:50px;padding-left: 60px;padding-right: 60px;border:1px solid black"> Register </a>
                                </div>
                                </br>
                              </form>
                        </div>
                    </div>
                </div>
            </div>





        
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js"></script>
